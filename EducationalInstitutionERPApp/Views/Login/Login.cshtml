@model EducationalInstitutionERPApp.Models.Admin

@{
    Layout = null;
    ViewBag.Title = "Login";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet"/>
    <link href="~/Content/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link href="~/Js/dist/css/AdminLTE.css" rel="stylesheet" />
    <!-- AdminLTE Skins. Choose a skin from the css/skins
     folder instead of downloading all of them to reduce the load. -->
    <link href="~/Js/dist/css/skins/_all-skins.css" rel="stylesheet" />
    <!-- iCheck -->
    <link href="~/Js/plugins/iCheck/flat/blue.css" rel="stylesheet" />
    <!-- Morris chart -->
    <link href="~/Js/plugins/morris/morris.css" rel="stylesheet" />
    <!-- jvectormap -->
    <link href="~/Js/plugins/jvectormap/jquery-jvectormap-1.2.2.css" rel="stylesheet" />
    <link href="~/SD/vendor/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <!-- MetisMenu CSS -->
    <link href="~/SD/vendor/metisMenu/metisMenu.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="~/SD/dist/css/sb-admin-2.css" rel="stylesheet" />
    <!-- Custom Fonts -->
    <link href="~/SD/vendor/font-awesome/css/font-awesome.css" rel="stylesheet" />

    <style>
        .field-validation-error {
            font-style: italic;
            color: red;
        }
        
    </style>

</head>

<body class="hold-transition skin-blue sidebar-mini">
    <div class=" navbar navbar-inverse navbar-fixed-top">
        <header class="main-header">
            <!-- Logo -->
            <a class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini"><b>IN</b>ST</span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg"><b>EducationalInst.</b>ERP</span>
            </a>
            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top">
            </nav>
        </header>
    </div>
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="login-panel panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Please Sign In</h3>
                        </div>
                        <div class="panel-body">
                            @using (Html.BeginForm(null, null,FormMethod.Post, new { id = "loginForm" }))
                            {
                                <fieldset>

                                    <div class="form-group">


                                        @Html.TextBoxFor(m => m.Email, new {@class = "form-control", @placeholder = "E-mail"})
                                        @Html.ValidationMessageFor(m => m.Email)


                                    </div>
                                    <div class="form-group">
                                        @Html.PasswordFor(m => m.Password, new {@class = "form-control", @placeholder = "Password"})
                                        @Html.ValidationMessageFor(m => m.Password)

                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-4 ">
                                            @if (ViewBag.Message != null)
                                            {
                                                <label class="label label-danger" style="display: inline-block">@ViewBag.Message</label>


                                            }
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        
                                        <div class="checkbox">
                                            <label>
                                                <input name="remember" type="checkbox" value="Remember Me">Remember Me
                                            </label>
                                        </div>
                                    </div>



                                    <!-- Change this to a button or input when using this as a form -->

                                    <div class="form-group">
                                        <div class="control-label ">
                                            <input type="submit" value="Log in" class="btn btn-lg btn btn-primary btn-block"/>
                                        </div>
                                    </div>
                                    <a href="#">Forgot Password?</a>
                                </fieldset>
                                
                            }
                            
                        </div>
                    </div>
                </div><!-- /.col-->
            </div>
        </div><!-- /.row -->
        <!-- jQuery -->


        <script src="~/Scripts/jquery-1.10.2.js"></script>
        <script src="~/Scripts/jquery.validate.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
        <script src="~/Scripts/jquery-ui-1.12.1.js"></script>
        <script src="~/SD/vendor/jquery/jquery.js"></script>
        <!-- Bootstrap Core JavaScript -->
        <script src="~/SD/vendor/bootstrap/js/bootstrap.js"></script>
        <!-- Metis Menu Plugin JavaScript -->
        <script src="~/SD/vendor/metisMenu/metisMenu.js"></script>
        <!-- Custom Theme JavaScript -->
        <script src="~/SD/dist/js/sb-admin-2.js"></script>

</body>
</html>