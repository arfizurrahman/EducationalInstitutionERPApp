@model EducationalInstitutionERPApp.Models.TransportModels.Vehicle
@{
    ViewBag.Title = "Show Vehicle Info";
}
@section style
{


    <link href="~/Content/DataTables/css/dataTables.jqueryui.min.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.css" rel="stylesheet" />

    <style>
        .field-validation-error {
            font-style: italic;
            color: red;
        }
    </style>
}

<div class="row">
    <div class="col-lg-12">
        <br>

        <ul class="breadcrumb">
            <li><a href="#"><i class="icon-home2 position-left"></i>Home</a></li>
            <li><a href="#">Transport</a></li>
            <li class="active">Vehicle Info</li>
        </ul>

        <h1 class="page-header">Vehicle Info</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>Vehicle Info</h4>
            </div>
            <div class="panel-body">

                @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal", id = "ShowVehicleInfoForm" }))
                {
                    <fieldset>

                        <div class="form-group">
                            @Html.LabelFor(m => m.VehicleNo, new { @class = "col-md-4 control-label" })
                            @*<div class="col-md-6">
                                @Html.TextBoxFor(m => m.VehicleNo, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.VehicleNo)
                            </div>*@

                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.NoOfSeats, new { @class = "col-md-4 control-label" })
                            @*<div class="col-md-6">
                                @Html.TextBoxFor(m => m.NoOfSeats, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.NoOfSeats)
                            </div>*@

                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.VehicleType, new { @class = "col-md-4 control-label" })
                            @*<div class="col-md-6 ">
                                @Html.TextBoxFor(m => m.VehicleType, new { @class = "form-control input-md" })
                                @Html.ValidationMessageFor(m => m.VehicleType)
                            </div>*@
                        </div>
                        <div class="form-group">

                            @Html.LabelFor(m => m.DriverName, new { @class = "col-md-4 control-label" })
                            @*<div class="col-md-6 ">
                                @Html.TextBoxFor(m => m.DriverName, new { @class = "form-control input-md" })
                                @Html.ValidationMessageFor(m => m.DriverName)
                            </div>*@
                        </div>



                        <!-- Change this to a button or input when using this as a form -->

                       

                    </fieldset>

                }
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    
        
    
</div>






@section Scripts {

<script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.js"></script>
    <script src="~/Scripts/DataTables/dataTables.jqueryui.js"></script>
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>

}




