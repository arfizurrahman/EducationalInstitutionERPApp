@using EducationalInstitutionERPApp.Models.TransportModels
@model EducationalInstitutionERPApp.Models.TransportModels.RouteVM
@{
    ViewBag.Title = "Add Route";
    List<RouteVM>routes = ViewBag.Routes;
}
@section style
{

<link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/DataTables/css/dataTables.jqueryui.min.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.css" rel="stylesheet" />

    <style>
        .field-validation-error {
            font-style: italic;
            color: red;
        }
    </style>
}

<div class="row">
    <div class="col-lg-12">
        <br>

        <ul class="breadcrumb">
            <li><a href="#"><i class="icon-home2 position-left"></i>Home</a></li>
            <li><a href="#">Transport</a></li>
            <li class="active">Add Route</li>
        </ul>

        <h1 class="page-header">Add Route</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>Route Detailes</h4>
            </div>
            <div class="panel-body">

                @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal", id = "AddRouteForm" }))
                {
                    <fieldset>

                        
                        <div class="form-group">
                            @Html.LabelFor(m => m.RouteCode, new { @class = "col-md-4 control-label" })
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => m.RouteCode, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.RouteCode)
                            </div>

                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.StartPlace, new { @class = "col-md-4 control-label" })
                            <div class="col-md-6 ">
                                @Html.TextBoxFor(m => m.StartPlace, new { @class = "form-control input-md" })
                                @Html.ValidationMessageFor(m => m.StartPlace)
                            </div>
                        </div>
                        <div class="form-group">

                            @Html.LabelFor(m => m.EndPlace, new { @class = "col-md-4 control-label" })
                            <div class="col-md-6 ">
                                @Html.TextBoxFor(m => m.EndPlace, new { @class = "form-control input-md" })
                                @Html.ValidationMessageFor(m => m.EndPlace)
                            </div>
                        </div>



                        <!-- Change this to a button or input when using this as a form -->

                        <div class="form-group">
                            <label class="col-md-4 control-label" for="Save"></label>
                            <div class="col-md-6">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </div>

                    </fieldset>

                }
                <div class="form-group">
                    <label class="col-md-4 control-label"></label>
                    <div class="col-md-4 ">
                        @if (ViewBag.Message != null)
                        {
                            if (ViewBag.Message == "Route added successfully!")
                            {
                                <h4><span class="label label-success">@ViewBag.Message</span></h4>
                            }
                            else
                            {
                                <h4><span class="label label-danger">@ViewBag.Message</span></h4>
                            }

                        }

    </div>
</div>

            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-sm-12">

            <div class=" breadcrumb">
                <h4>List of Routes</h4>
            </div>

            <div class="table-responsive table-bordered" id="item-grid">
                <table id="example" class="display" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>SL No.</th>
                          
                            <th>Route Code</th>
                            <th>Start Place</th>
                            <th>End Place</th>
                            <th>Manage</th>

                        </tr>
                    </thead>

                    <tbody>
                       @{int rowNo = 0;}
                        @foreach (RouteVM route in routes)
                        {
                            rowNo++;


                            <tr>
                                <td width="5%">@rowNo</td>
                                <td width="8%">@route.RouteCode</td>
                                <td width="10%">@route.StartPlace</td>
                                <td width="10%">@route.EndPlace</td>
                                
                                <td width="10%"><a class="glyphicon glyphicon-pencil" title="" href="#"><img src="" alt=""/></a> <a class="glyphicon glyphicon-eye-open" title="" href="#"><img src="" alt=""/></a> <a class="glyphicon glyphicon-trash" title="" href=""><img src="" alt="" /></a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>




@section Scripts {
    <script src="~/Scripts/jquery-1.10.2.js"></script>

    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.js"></script>
    <script src="~/Scripts/DataTables/dataTables.jqueryui.js"></script>
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>

}
