@using EducationalInstitutionERPApp.Models.TransportModels
@model EducationalInstitutionERPApp.Models.TransportModels.Vehicle
@{
    ViewBag.Title = "Edit Vehicle";
    Vehicle vehicle = ViewBag.Vehicle;
}
@section style
{


    <link href="~/Content/DataTables/css/dataTables.jqueryui.min.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.css" rel="stylesheet" />

    <style>
        .field-validation-error {
            font-style: italic;
            color: red;
        }
    </style>
}

<div class="row">
    <div class="col-lg-12">
        <br>

        <ul class="breadcrumb">
            <li><a href="#"><i class="icon-home2 position-left"></i>Home</a></li>
            <li><a href="#">Transport</a></li>
            <li class="active">Edit Vehicle</li>
        </ul>

        <h1 class="page-header">Edit Vehicle</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>Vehicle Detailes</h4>
            </div>
            <div class="panel-body">

                @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal", id = "AddVehicleForm" }))
                {
                    <fieldset>

                        <div class="form-group">
                            @Html.LabelFor(m => vehicle.VehicleNo, new { @class = "col-md-4 control-label" })
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => vehicle.VehicleNo, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => vehicle.VehicleNo)
                            </div>

                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => vehicle.NoOfSeats, new { @class = "col-md-4 control-label" })
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => vehicle.NoOfSeats, new { @class = "form-control"  })
                                @Html.ValidationMessageFor(m => vehicle.NoOfSeats)
                            </div>

                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.VehicleTypeId, new { @class = "col-md-4 control-label" })
                            <div class="col-md-6">
                                @Html.DropDownListFor(x => vehicle.VehicleTypeId, new SelectList(ViewBag.VehicleTypes, "Value", "Text"), new { @class = "form-control input-md" })
                                @Html.ValidationMessageFor(m => m.VehicleTypeId)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => vehicle.DriverId, new { @class = "col-md-4 control-label" })
                            <div class="col-md-6">
                                @Html.DropDownListFor(x => vehicle.DriverId, new SelectList(ViewBag.Drivers, "Value", "Text"), new { @class = "form-control input-md" })
                                @Html.ValidationMessageFor(m => m.DriverId)
                            </div>
                        </div>



                        <!-- Change this to a button or input when using this as a form -->

                        <div class="form-group">
                            <label class="col-md-4 control-label" for="Update"></label>
                            <div class="col-md-6">
                                <input type="submit" value="Update" class="btn btn-primary"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="Update"></label>
                            <div class="col-md-6">
                                @Html.ActionLink( "Back to previous","AddVehicle","Transport" )
                            </div>
                        </div>
                        
                    </fieldset>

                }
                <div class="form-group">
                    <label class="col-md-4 control-label"></label>
                    <div class="col-md-4 ">
                        @if (ViewBag.Message != null)
                        {
                            if (ViewBag.Message == "Vehicle updated suucessfully!!")
                            {
                                <h4><span class="label label-success">@ViewBag.Message</span></h4>
                            }
                            else
                            {
                                <h4><span class="label label-danger">@ViewBag.Message</span></h4>
                            }

                        }

                    </div>
                </div>

            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    
</div>






@section Scripts {

<script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.js"></script>
    <script src="~/Scripts/DataTables/dataTables.jqueryui.js"></script>
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>

}
