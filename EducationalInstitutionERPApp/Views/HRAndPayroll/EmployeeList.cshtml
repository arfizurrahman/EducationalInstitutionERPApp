@using EducationalInstitutionERPApp.Models.HRAndPayrollModels
@model EducationalInstitutionERPApp.Models.HRAndPayrollModels.Employee
@{
    ViewBag.Title = "EmployeeList";
    List<Employee> employees = ViewBag.Employees;
}

@section style
{


    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/DataTables/css/dataTables.jqueryui.min.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.css" rel="stylesheet" />

    <style>
        .field-validation-error {
            font-style: italic;
            color: red;
        }
    </style>
}
<div class="row">
    <div class="col-lg-12">
        <br>

        <ul class="breadcrumb">
            <li><a href="#"><i class="icon-home2 position-left"></i>Home</a></li>
            <li><a href="#">HR/Payroll</a></li>
            <li class="active">Employee List</li>
        </ul>

        <h1 class="page-header">Employee List</h1>
    </div>
</div>

<div class="row">
    
    <div class="col-lg-6"><a href="@Url.Action("AddEmployee", "HRAndPayroll")"><button type="submit" class="btn btn-md btn-primary fa fa-plus"> Add</button></a></div><br><div class="row">_______</div>
</div>
<div class="row">
   
        <div class="col-sm-12">


            <div class="table-responsive table-bordered" id="item-grid">
                <table id="example" class="display" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>SL No.</th>
                            <th>Name</th>

                            <th>Contact No</th>
                            <th>Email</th>
                            <th>Gender</th>
                            <th>Joining Date</th>
                            <th>Department</th>
                            <th>Category</th>

                            @*<th>Manage</th>*@

                        </tr>
                    </thead>
                    
                        <tbody>
                            @{ int rowNo = 0; }
                            @foreach (Employee employee in employees)
                            {
                                rowNo++;
                                <tr>
                                    <td width="5%">@rowNo</td>

                                    <td width="8%">@employee.Name</td>
                                    <td width="5%">@employee.ContactNo</td>
                                    <td width="10%">@employee.Email</td>
                                    <td width="10%">@employee.Gender</td>
                                    <td width="10%">@employee.JoiningDate</td>
                                    <td width="10%">@employee.Department</td>
                                    <td width="10%">@employee.Category</td>


                                    @*<td width="10%"><a class="glyphicon glyphicon-pencil" title="" href="#"><img src="" alt="" /></a> <a class="glyphicon glyphicon-eye-open" title="" href="#"><img src="" alt="" /></a> <a class="glyphicon glyphicon-trash" title="" href=""><img src="" alt="" /></a></td>*@
                                </tr>
                            }



                        </tbody>
                    



                </table>
            </div>
        </div>
    </div>





@section Scripts {
    <script src="~/Scripts/jquery-1.10.2.js"></script>

    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.js"></script>
    <script src="~/Scripts/DataTables/dataTables.jqueryui.js"></script>
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>



}




