@using EducationalInstitutionERPApp.Models.HRAndPayrollModels
@model EducationalInstitutionERPApp.Models.HRAndPayrollModels.Employee
@{
    ViewBag.Title = "AddEmployee";
}

@section style
{


    <link href="~/Content/DataTables/css/dataTables.jqueryui.min.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.css" rel="stylesheet" />

    <style>
        .field-validation-error {
            font-style: italic;
            color: red;
        }
    </style>
}

<div class="row">
    <div class="col-lg-12">
        <br>

        <ul class="breadcrumb">
            <li><a href="#"><i class="icon-home2 position-left"></i>Home</a></li>
            <li><a href="#">HR/Payroll</a></li>
            <li><a href="#">Employee Managemenr</a></li>
            <li class="active">Add Employee</li>
        </ul>

        <h1 class="page-header">Add Employee</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>Employee Detailes</h4>
            </div>
            <div class="panel-body">

                @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal", id = "AddEmployeeForm", enctype = "multipart/form-data" }))
{
    <fieldset>
        <div class="row">
            <div class="col-lg-12">
                <div class="col-lg-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name, new { @class = "col-md-4 control-label" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Name)
                        </div>

                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.GenderId, new { @class = "col-md-4 control-label" })
                        <div class="col-md-6">
                            @Html.DropDownListFor(x => x.GenderId, new SelectList(ViewBag.Genders, "Value", "Text"), new { @class = "form-control input-md" })
                            @Html.ValidationMessageFor(x => x.GenderId)
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="col-lg-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.DateOfBirth, new { @class = "col-md-4 control-label" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.DateOfBirth, new { @class = "form-control", id = "datepicker" })
                            @Html.ValidationMessageFor(m => m.DateOfBirth)
                        </div>
                    </div>

                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.ContactNo, new { @class = "col-md-4 control-label" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.ContactNo, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.ContactNo)
                        </div>

                    </div>
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="col-lg-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-4 control-label" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Email)
                        </div>

                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Address, new { @class = "col-md-4 control-label" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Address)
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="col-lg-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.JoiningDate, new { @class = "col-md-4 control-label" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.JoiningDate, new { @class = "form-control", id = "datepicker2" })
                            @Html.ValidationMessageFor(m => m.JoiningDate)
                        </div>

                    </div>
                </div>



                <div class="col-lg-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.DepartmentId, new { @class = "col-md-4 control-label" })
                        <div class="col-md-6">
                            @Html.DropDownListFor(x => x.DepartmentId, new SelectList(ViewBag.Departments, "Value", "Text"), new { @class = "form-control input-md" })
                            @Html.ValidationMessageFor(x => x.DepartmentId)
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-lg-12">
                <div class="col-lg-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.CategoryId, new { @class = "col-md-4 control-label" })
                        <div class="col-md-6">
                            @Html.DropDownListFor(x => x.CategoryId, new SelectList(ViewBag.Categories, "Value", "Text"), new { @class = "form-control input-md" })
                            @Html.ValidationMessageFor(x => x.CategoryId)
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.DesignationId, new { @class = "col-md-4 control-label" })
                        <div class="col-md-6">
                            @Html.DropDownListFor(x => x.DesignationId, new SelectList(ViewBag.Designations, "Value", "Text"), new { @class = "form-control input-md" })
                            @Html.ValidationMessageFor(x => x.DesignationId)
                        </div>
                    </div>
                </div>
            </div>
        </div>




        <div class="row">
            <div class="col-lg-12">
                <div class="col-lg-6">
                    <div class="form-group">

                        <label class="col-md-4 control-label" for="EmployeeImage">Image</label>
                        <div class="col-md-8 ">
                            <input type="file" id="EmployeeImage" name="EmployeeImage">

                        </div>
                    </div>
                </div>
            </div>
        </div>







        <!-- Change this to a button or input when using this as a form -->
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label class="col-md-4 control-label" for="Save"></label>
                    <div class="col-md-8">
                        <input type="submit" value="Save" class="btn btn-primary"/>
                    </div>
                </div>
            </div>
        </div>


    </fieldset>

}
                <div class="form-group">
                    <label class="col-md-4 control-label"></label>
                    <div class="col-md-4 ">
                        @if (ViewBag.Message != null)
                        {
                            if (ViewBag.Message == "Vehicle assigned suucessfully!!")
                            {
                                <h4><span class="label label-success">@ViewBag.Message</span></h4>
                            }
                            else
                            {
                                <h4><span class="label label-danger">@ViewBag.Message</span></h4>
                            }

                        }

                    </div>
                </div>

            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
   

</div>




@section Scripts {
<script src="~/Scripts/jquery-1.10.2.js"></script>

    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.js"></script>
    
    <script src="~/Scripts/DataTables/dataTables.jqueryui.js"></script>
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    
  
    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>
    <script>
    $(function () {
        $("#datepicker").datepicker({
            dateFormat: 'dd-mm-yy',
            changeMonth: true,
            changeYear: true,
            yearRange: '1960:2030'
        });
    });
</script>
    
  <script>
    $(function () {
        $("#datepicker2").datepicker({
            dateFormat: 'dd-mm-yy',
            changeMonth: true,
            changeYear: true,
            yearRange: '1960:2030'
        });
    });
</script>


}




