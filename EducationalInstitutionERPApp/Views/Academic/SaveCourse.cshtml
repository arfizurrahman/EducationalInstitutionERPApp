@using EducationalInstitutionERPApp.Models.AcademicModels
@model EducationalInstitutionERPApp.Models.AcademicModels.Course
@{
    ViewBag.Title = "SaveCourse";
    List<Course> courses = ViewBag.Courses;
}

@section style
{


    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/DataTables/css/dataTables.jqueryui.min.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.css" rel="stylesheet" />

    <style>
        .field-validation-error {
            font-style: italic;
            color: red;
        }
    </style>

}

<div class="row">
    <div class="col-lg-12">
        <br>

        <ul class="breadcrumb">
            <li><a href="#"><i class="icon-home2 position-left"></i>Home</a></li>
            <li><a href="#">Academic</a></li>
            <li class="active">Save Course</li>
        </ul>

        <h1 class="page-header">Save Course</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>Course Detailes</h4>
            </div>
            <div class="panel-body">

                @using (Html.BeginForm(null, null, FormMethod.Post, new {@class = "form-horizontal", id = "SaveCourseForm"}))
                {
                    <fieldset>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Code, new {@class = "col-md-4 control-label"})
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => m.Code, new {@class = "form-control"})
                                @Html.ValidationMessageFor(m => m.Code)
                            </div>

                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.CourseName, new {@class = "col-md-4 control-label"})
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => m.CourseName, new {@class = "form-control"})
                                @Html.ValidationMessageFor(m => m.CourseName)
                            </div>

                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Credit, new {@class = "col-md-4 control-label"})
                            <div class="col-md-6 ">
                                @Html.TextBoxFor(m => m.Credit, new {@class = "form-control input-md"})
                                @Html.ValidationMessageFor(m => m.Credit)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Description, new {@class = "col-md-4 control-label"})
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => m.Description, new {@class = "form-control"})
                                @Html.ValidationMessageFor(m => m.Description)
                            </div>

                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.DepartmentId, new {@class = "col-md-4 control-label"})
                            <div class="col-md-6">
                                @Html.DropDownListFor(x => x.DepartmentId, new SelectList(ViewBag.Departments, "Value", "Text"), new {@class = "form-control input-md"})
                                @Html.ValidationMessageFor(m => m.DepartmentId)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.SemesterId, new {@class = "col-md-4 control-label"})
                            <div class="col-md-6">
                                @Html.DropDownListFor(x => x.SemesterId, new SelectList(ViewBag.Semesters, "Value", "Text"), new {@class = "form-control input-md"})
                                @Html.ValidationMessageFor(x => x.SemesterId)
                            </div>
                        </div>



                        <!-- Change this to a button or input when using this as a form -->

                        <div class="form-group">
                            <label class="col-md-4 control-label" for="Save"></label>
                            <div class="col-md-6">
                                <input type="submit" value="Save" class="btn btn-primary"/>
                            </div>
                        </div>

                    </fieldset>

                }
                <div class="form-group">
                    <label class="col-md-4 control-label"></label>
                    <div class="col-md-4 ">
                        @if (ViewBag.Message != null)
                        {
                            if (ViewBag.Message == "Course saved successfully")
                            {
                                <h4><span class="label label-success">@ViewBag.Message</span></h4>
                            }
                            else
                            {
                                <h4><span class="label label-danger">@ViewBag.Message</span></h4>
                            }

                        }

                    </div>
                </div>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-sm-12">

            <div class=" breadcrumb">
                <h4>List of Courses</h4>
            </div>

            <div class="table-responsive table-bordered" id="item-grid">
                <table id="example" class="display" cellspacing="0" width="100%">
                    <thead>
                    <tr>
                        <th>SL No.</th>
                        <th>Code</th>

                        <th>Name</th>
                        <th>Credit</th>
                        <th>Department</th>

                        <th>Semester</th>
                        @*<th>Manage</th>*@

                    </tr>
                    </thead>

                    <tbody>
                    @{int rowNo = 0;}
                    @foreach (Course course in courses)
                    {
                        rowNo++;
                        <tr>
                            <td width="5%">@rowNo</td>
                            <td width="5%">@course.Code</td>
                            <td width="8%">@course.CourseName</td>
                            <td width="10%">@course.Credit</td>
                            <td width="10%">@course.Department</td>
                            <td width="10%">@course.Semester</td>


                            @*<td width="10%"><a class="glyphicon glyphicon-pencil" title="" href="#"><img src="" alt="" /></a> <a class="glyphicon glyphicon-eye-open" title="" href="#"><img src="" alt="" /></a> <a class="glyphicon glyphicon-trash" title="" href=""><img src="" alt="" /></a></td>*@
                        </tr>
                    }



                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>




@section Scripts {
    <script src="~/Scripts/jquery-1.10.2.js"></script>

    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.js"></script>
    <script src="~/Scripts/DataTables/dataTables.jqueryui.js"></script>
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>

}

